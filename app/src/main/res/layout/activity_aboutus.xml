<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/ivMD"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="25dp"
        android:src="@drawable/multidots_1" />

    <TextView
        android:id="@+id/abtus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMD"
        android:layout_marginLeft="10dp"
        android:text="ABOUT US"
        android:textSize="25dip" />

    <TextView
        android:id="@+id/findus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abtus"
        android:layout_marginLeft="25dp"
        android:text="- You can find us on here."
        android:textSize="15dip" />

    <TextView
        android:id="@+id/findusLink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findus"
        android:layout_marginLeft="40dp"
        android:text="www.multidots.com"
        android:textSize="20dip" />


    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/share" />

</RelativeLayout>